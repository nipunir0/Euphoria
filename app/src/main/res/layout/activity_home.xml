<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity"
    android:background="@drawable/nipuni15">

    <TextView
        android:id="@+id/titleHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="12dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="EUPHORIA "
        android:textColor="#CDB6F6"
        android:textSize="55sp"
        android:textStyle="bold" />

    <GridLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:layout_below="@id/titleHome"
       android:layout_marginStart="50dp"
       android:layout_marginTop="1dp"
       android:layout_marginEnd="50dp"
       android:layout_marginBottom="5dp"
       android:columnCount="2"
       android:rowCount="4">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardexersise"
            android:layout_width="109dp"
            android:layout_height="116dp"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            app:cardBackgroundColor="#FFFFFF"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="96dp"
                android:layout_gravity="center_vertical|center_horizontal"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="87dp"
                    android:layout_height="75dp"
                    android:src="@drawable/yogaa" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="EXERCISE"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textStyle="bold" />
            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardmusic"
            android:layout_width="109dp"
            android:layout_height="116dp"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            app:cardBackgroundColor="#FFFFFF"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="96dp"
                android:layout_gravity="center_vertical|center_horizontal"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="87dp"
                    android:layout_height="75dp"
                    android:src="@drawable/musical" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MUSIC"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textStyle="bold" />
            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
           android:id="@+id/cardfinddoctor"
           android:layout_width="109dp"
           android:layout_height="116dp"
           android:layout_row="1"
           android:layout_rowWeight="1"
           android:layout_column="0"
           android:layout_columnWeight="1"
           android:layout_gravity="fill"
           app:cardBackgroundColor="#FFFFFF"
           app:cardCornerRadius="20dp"
           app:cardElevation="8dp"
           app:cardUseCompatPadding="true">

           <LinearLayout
               android:layout_width="100dp"
               android:layout_height="96dp"
               android:layout_gravity="center_vertical|center_horizontal"
               android:gravity="center"
               android:orientation="vertical">

               <ImageView
                   android:layout_width="87dp"
                   android:layout_height="75dp"
                   android:src="@drawable/doctorvec" />

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="DOCTOR"
                   android:textAlignment="center"
                   android:textColor="@color/black"
                   android:textStyle="bold" />
           </LinearLayout>


       </androidx.cardview.widget.CardView>

       <androidx.cardview.widget.CardView
           android:id="@+id/cardvideo"
           android:layout_width="109dp"
           android:layout_height="116dp"
           android:layout_row="1"
           android:layout_rowWeight="1"
           android:layout_column="1"
           android:layout_columnWeight="1"
           android:layout_gravity="fill"
           app:cardBackgroundColor="#FFFFFF"
           app:cardCornerRadius="20dp"
           app:cardElevation="8dp"
           app:cardUseCompatPadding="true">

           <LinearLayout
               android:layout_width="100dp"
               android:layout_height="96dp"
               android:layout_gravity="center_vertical|center_horizontal"
               android:gravity="center"
               android:orientation="vertical">

               <ImageView
                   android:layout_width="87dp"
                   android:layout_height="75dp"
                   android:src="@drawable/multimedia" />

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="VIDEO"
                   android:textAlignment="center"
                   android:textColor="@color/black"
                   android:textStyle="bold" />
           </LinearLayout>


       </androidx.cardview.widget.CardView>
       <androidx.cardview.widget.CardView
           android:id="@+id/cardprogress"
           android:layout_width="109dp"
           android:layout_height="116dp"
           android:layout_row="2"
           android:layout_rowWeight="1"
           android:layout_column="0"
           android:layout_columnWeight="1"
           android:layout_gravity="fill"
           app:cardBackgroundColor="#FFFFFF"
           app:cardCornerRadius="20dp"
           app:cardElevation="8dp"
           app:cardUseCompatPadding="true">

           <LinearLayout
               android:layout_width="100dp"
               android:layout_height="96dp"
               android:layout_gravity="center_vertical|center_horizontal"
               android:gravity="center"
               android:orientation="vertical">

               <ImageView
                   android:layout_width="87dp"
                   android:layout_height="75dp"
                   android:src="@drawable/career" />

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="PROGRESS"
                   android:textAlignment="center"
                   android:textColor="@color/black"
                   android:textStyle="bold" />
           </LinearLayout>


       </androidx.cardview.widget.CardView>
       <androidx.cardview.widget.CardView
           android:id="@+id/cardarticle"
           android:layout_width="109dp"
           android:layout_height="116dp"
           android:layout_row="2"
           android:layout_rowWeight="1"
           android:layout_column="1"
           android:layout_columnWeight="1"
           android:layout_gravity="fill"
           app:cardBackgroundColor="#FFFFFF"
           app:cardCornerRadius="20dp"
           app:cardElevation="8dp"
           app:cardUseCompatPadding="true">

           <LinearLayout
               android:layout_width="100dp"
               android:layout_height="96dp"
               android:layout_gravity="center_vertical|center_horizontal"
               android:gravity="center"
               android:orientation="vertical">

               <ImageView
                   android:layout_width="87dp"
                   android:layout_height="75dp"
                   android:src="@drawable/articles" />

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="ARTICLE"
                   android:textAlignment="center"
                   android:textColor="@color/black"
                   android:textStyle="bold" />
           </LinearLayout>


       </androidx.cardview.widget.CardView>
       <androidx.cardview.widget.CardView
           android:id="@+id/cardmap"
           android:layout_width="109dp"
           android:layout_height="116dp"
           android:layout_row="3"
           android:layout_rowWeight="1"
           android:layout_column="0"
           android:layout_columnWeight="1"
           android:layout_gravity="fill"
           app:cardBackgroundColor="#FFFFFF"
           app:cardCornerRadius="20dp"
           app:cardElevation="8dp"
           app:cardUseCompatPadding="true">

           <LinearLayout
               android:layout_width="100dp"
               android:layout_height="96dp"
               android:layout_gravity="center_vertical|center_horizontal"
               android:gravity="center"
               android:orientation="vertical">

               <ImageView
                   android:layout_width="62dp"
                   android:layout_height="55dp"
                   android:src="@drawable/map" />

               <TextView
                   android:layout_width="81dp"
                   android:layout_height="33dp"
                   android:text="DOCTOR NEAR YOU"
                   android:textAlignment="center"
                   android:textColor="@color/black"
                   android:textStyle="bold" />
           </LinearLayout>


       </androidx.cardview.widget.CardView>

       <androidx.cardview.widget.CardView
           android:id="@+id/cardexit"
           android:layout_width="109dp"
           android:layout_height="116dp"
           android:layout_row="3"
           android:layout_rowWeight="1"
           android:layout_column="1"
           android:layout_columnWeight="1"
           android:layout_gravity="fill"
           app:cardBackgroundColor="#FFFFFF"
           app:cardCornerRadius="20dp"
           app:cardElevation="8dp"
           app:cardUseCompatPadding="true">

           <LinearLayout
               android:layout_width="100dp"
               android:layout_height="96dp"
               android:layout_gravity="center_vertical|center_horizontal"
               android:gravity="center"
               android:orientation="vertical">

               <ImageView
                   android:layout_width="87dp"
                   android:layout_height="75dp"
                   android:src="@drawable/power" />

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="EXIT"
                   android:textAlignment="center"
                   android:textColor="@color/black"
                   android:textStyle="bold" />
           </LinearLayout>


       </androidx.cardview.widget.CardView>
   </GridLayout>


</RelativeLayout>